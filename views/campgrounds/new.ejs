<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">새 캠핑장</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds" method="post">
            <div class="mb-3">
                <label class="form-label" for="title">캠핑장 이름</label>
                <input class="form-control" type="text" id="title" placeholder="이름">
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">캠핑장 위치</label>
                <input class="form-control" type="text" id="location" placeholder="위치">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">캠핑장 이미지 URL</label>
                <input class="form-control" type="text" id="image" placeholder="https://">
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">캠핑장 가격</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">￦</span>
                    <input type="text" class="form-control" id="price" placeholder="0">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">캠핑장 설명</label>
                <textarea class="form-control" id="description" placeholder="설명"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-success" id="submitButton">캠핑장 추가</button>
            </div>
        </form>
        <a href="/campgrounds">모든 캠핑장</a>
    </div>
</div>

<script>
    const submitButton = document.querySelector('#submitButton');        
    submitButton.addEventListener('click', e => {
        e.preventDefault();

        const title = document.querySelector('#title');
        const location = document.querySelector('#location');
        const image = document.querySelector('#image');
        const price = document.querySelector('#price');
        const description = document.querySelector('#description');

        axios.post(`/campgrounds`, {
            title: title.value,
            location: location.value,
            image: image.value,
            price: price.value,
            description: description.value           
        })
            .then(res => {
                if (res.data.success) {
                    window.location.href = '/campgrounds/' + res.data.id;
                } else {
                    alert(res.data.msg);
                }
            })
            .catch(err => {
                alert(err.response.data.msg);
            });
    });
</script>