<% layout('/layouts/boilerplate') %>

    <div class="container d-flex justify-content-center align-items-center">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                        alt="" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">로그인</h5>
                        <form action="/login" method="post" class="validated-form" novalidate>
                            <div class="mb-3">
                                <label class="form-label" for="username">이름</label>
                                <input class="form-control" type="text" id="username" name="username" placeholder="이름입력"
                                    autofocus required>
                                <div class="valid-feedback">작성완료!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="password">암호</label>
                                <input class="form-control" type="password" id="password" name="password"
                                    placeholder="암호입력" required>
                                <div class="valid-feedback">작성완료!</div>
                            </div>
                            <div class="mb-3 d-grid gap-2">
                                <button class="btn btn-success">로그인</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const form = document.querySelector('form');
        form.addEventListener('submit', e => {
            e.preventDefault();

            //Form Vaildation
            if (!formVaildation(form)) {
                return;
            }

            form.submit();
        });
    </script>